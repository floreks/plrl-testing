apiVersion: deployments.plural.sh/v1alpha1
kind: ServiceDeployment
metadata:
  name: agent-11-testing-helm-hooks
  namespace: testing
spec:
  namespace: testing
  repositoryRef:
    name: {{ configuration.repositoryName }}
  git:
    folder: resources/agent/11-helm-hooks
    ref: main
  clusterRef:
    kind: Cluster
    name: {{ configuration.cluster }}
    namespace: testing
  configuration:
    testScenario: "helm-hooks"
    description: "Validate helm.sh/hook annotation support (pre-install, pre-upgrade, post-install, post-upgrade)"


