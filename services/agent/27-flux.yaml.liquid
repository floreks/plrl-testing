apiVersion: deployments.plural.sh/v1alpha1
kind: ServiceDeployment
metadata:
  name: 27-flux
  namespace: testing
spec:
  namespace: testing
  reconciliation:
    driftDetection: true
    interval: 1m
  repositoryRef:
    name: {{ configuration.repositoryName }}
  helm:
    url: https://fluxcd-community.github.io/helm-charts
    version: x.x.x
    chart: fluxcd-community/flux2
  clusterRef:
    kind: Cluster
    name: {{ configuration.cluster }}
    namespace: testing