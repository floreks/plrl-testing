apiVersion: apps/v1
kind: Deployment
metadata:
  name: helm-hooks-post-upgrade
  namespace: testing
  annotations:
    helm.sh/hook: post-upgrade
    helm.sh/hook-weight: "3"
  labels:
    app: helm-hooks-test
    phase: post-upgrade
    scenario: helm-hooks
spec:
  replicas: 1
  selector:
    matchLabels:
      app: helm-hooks-test
      component: post-upgrade
  template:
    metadata:
      labels:
        app: helm-hooks-test
        component: post-upgrade
    spec:
      containers:
      - name: post-upgrade
        image: nginx:1.25-alpine
        ports:
        - containerPort: 80
        env:
        - name: HOOK_TYPE
          value: "post-upgrade"

