apiVersion: apps/v1
kind: Deployment
metadata:
  name: detachment-test-app
  namespace: testing
  labels:
    app: detachment-test-app
    test-scenario: detachment-test
    test-type: detachment-deployment
    preserve-on-detach: "{{ configuration.preserveResources }}"
spec:
  replicas: 2
  selector:
    matchLabels:
      app: detachment-test-app
  template:
    metadata:
      labels:
        app: detachment-test-app
        test-scenario: detachment-test
      annotations:
        detachment-mode: "{{ configuration.detachmentMode }}"
        preserve-resources: "{{ configuration.preserveResources }}"
        managed-by: "plural-agent"
    spec:
      containers:
      - name: detach-app
        image: nginx:alpine
        ports:
        - containerPort: 80
        env:
        - name: DETACHMENT_MODE
          value: "{{ configuration.detachmentMode }}"
        - name: PRESERVE_RESOURCES
          value: "{{ configuration.preserveResources }}"
        - name: TEST_SCENARIO
          value: "{{ configuration.testScenario }}"
        - name: MANAGED_BY
          value: "plural-agent"
        volumeMounts:
        - name: detach-config
          mountPath: /etc/detach
        resources:
          requests:
            memory: "64Mi"
            cpu: "50m"
          limits:
            memory: "128Mi"
            cpu: "100m"
        livenessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 30
        readinessProbe:
          httpGet:
            path: /ready
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 10
      volumes:
      - name: detach-config
        configMap:
          name: detachment-test-config
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: detachment-test-pvc
  namespace: testing
  labels:
    app: detachment-test-app
    test-scenario: detachment-test
    test-type: persistent-storage
    preserve-on-detach: "{{ configuration.preserveResources }}"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi

