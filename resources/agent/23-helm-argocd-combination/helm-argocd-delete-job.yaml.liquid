apiVersion: batch/v1
kind: Job
metadata:
  name: helm-argocd-delete-policies
  namespace: testing
  annotations:
    helm.sh/hook: post-upgrade
    argocd.argoproj.io/sync-wave: "5"
    helm.sh/hook-delete-policy: hook-succeeded,hook-failed
  labels:
    app: helm-argocd-combo-test
    scenario: helm-argocd-combination
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        app: helm-argocd-combo-test
    spec:
      restartPolicy: Never
      containers:
      - name: job
        image: quay.io/prometheus/busybox:latest
        command: ["/bin/sh","-c","echo helm-argocd with delete policies; sleep 2"]
