    metadata:
      labels:
        scenario: hooks-waves
        app: hooks-waves
        component: sync-pos2-job
    spec:
      restartPolicy: Never
      containers:
      - name: sync-pos2
        image: busybox:1.36
        command: ["/bin/sh","-c","echo sync wave 2; sleep 2"]

