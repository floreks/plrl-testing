apiVersion: batch/v1
kind: Job
metadata:
  name: hooks-waves-sync-2-job
  namespace: testing
  annotations:
    deployment.plural.sh/sync-hook: sync
    deployment.plural.sh/sync-wave: "2"
  labels:
    scenario: hooks-waves
    phase: sync
    wave: "2"
    app: hooks-waves
    managed-by: plural-test
