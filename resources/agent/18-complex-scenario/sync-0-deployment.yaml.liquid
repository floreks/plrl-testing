apiVersion: apps/v1
kind: Deployment
metadata:
  name: complex-sync-0
  namespace: testing
  annotations:
    deployment.plural.sh/sync-hook: sync
    deployment.plural.sh/sync-wave: "0"
  labels:
    app: complex-scenario-test
    scenario: complex-scenario
    wave: "0"
spec:
  replicas: 2
  selector:
    matchLabels:
      app: complex-scenario-test
      component: main
  template:
    metadata:
      labels:
        app: complex-scenario-test
        component: main
    spec:
      containers:
      - name: app
        image: nginx:1.25-alpine
        ports:
        - containerPort: 80

