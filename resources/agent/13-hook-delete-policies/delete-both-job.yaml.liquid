apiVersion: batch/v1
kind: Job
metadata:
  name: hook-delete-both-policies-job
  namespace: testing
  annotations:
    deployment.plural.sh/sync-hook: sync
    deployment.plural.sh/sync-wave: "0"
    deployment.plural.sh/sync-hook-delete-policy: hook-succeeded,hook-failed
  labels:
    app: hook-delete-test
    phase: sync
    scenario: hook-delete-policies
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        app: hook-delete-test
        component: delete-both
    spec:
      restartPolicy: Never
      containers:
      - name: job
        image: quay.io/prometheus/busybox:latest
        command: ["/bin/sh","-c","echo job with both delete policies; sleep 2"]
