apiVersion: batch/v1
kind: Job
metadata:
  name: hook-delete-failed-job
  namespace: testing
  annotations:
    deployment.plural.sh/sync-hook: pre-sync
    deployment.plural.sh/sync-wave: "1"
    deployment.plural.sh/sync-hook-delete-policy: hook-failed
  labels:
    app: hook-delete-test
    phase: pre-sync
    scenario: hook-delete-policies
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        app: hook-delete-test
        component: delete-failed
    spec:
      restartPolicy: Never
      containers:
      - name: job
        image: quay.io/prometheus/busybox:latest
        command: ["/bin/sh","-c","echo job fails, should be deleted; exit 1"]
