apiVersion: batch/v1
kind: Job
metadata:
  name: edge-case-no-annotations
  namespace: testing
  labels:
    app: edge-cases-test
    scenario: edge-cases
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        app: edge-cases-test
    spec:
      restartPolicy: Never
      containers:
      - name: job
        image: quay.io/prometheus/busybox:latest
        command: ["/bin/sh","-c","echo job with no sync annotations; sleep 2"]
